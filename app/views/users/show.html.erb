<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <div class="col-md-12">
        <h1>
          <%= gravatar_for @user %>
          <%= @user.name %>
        </h1>
      </div>
      <div class="col-md-12">
        <p class="glyphicon glyphicon-map-marker" aria-hidden="true"><%= @user.area %></p>
      </div>
      <div class="col-md-12">
        <%= @user.profile %>
      </div>
    </section>
  </aside>
  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
    <% end %>
  </div>
</div>