<div class="row">
  <aside>
    <section class="user_info">
      <div class="col-md-12">
        <h1>
          <%= gravatar_for user %>
          <%= user.name %>
        </h1>
      </div>
      <div class="col-md-12">
        <p class="glyphicon glyphicon-map-marker" aria-hidden="true"><%= user.area %></p>
      </div>
      <div class="col-md-12">
        <%= user.profile %>
      </div>
    </section>
  </aside>
</div>